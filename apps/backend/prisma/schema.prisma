generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ENUM
enum Role {
  ADMIN
  STAFF
  DOCTOR
}

enum Gender {
  MALE
  FEMALE
}

enum SyncStatus {
  PENDING
  VERIFIED
  TAMPERED
}

// ===========================================
// USER MANAGEMENT
// ===========================================
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
  role      Role     @default(STAFF)
  createdAt DateTime @default(now()) @map("created_at")

  doctorProfile Doctor?

  @@map("users")
}

// ===========================================
//  DOCTOR PROFILE
// ===========================================
model Doctor {
  id             Int     @id @default(autoincrement())
  userId         Int?    @unique @map("user_id")
  name           String  @db.VarChar(100)
  sip            String  @db.VarChar(50)
  specialization String? @db.VarChar(100)
  walletAddress  String? @map("wallet_address") @db.VarChar(255)
  isActive       Boolean @default(true) @map("is_active")

  user           User?           @relation(fields: [userId], references: [id])
  medicalRecords MedicalRecord[]

  @@map("doctors")
}

// ===========================================
//  PATIENTS
// ===========================================
model Patient {
  id String @id @default(uuid()) @db.Uuid

  // Identitas Formal
  nik        String? @unique @db.VarChar(16)
  bpjsNumber String? @unique @map("bpjs_number") @db.VarChar(20)

  // Demografi
  fullName    String    @map("full_name") @db.VarChar(100)
  dateOfBirth DateTime? @map("date_of_birth") @db.Date
  gender      Gender?

  // Verifikasi Tanpa KTP
  motherName  String? @map("mother_name") @db.VarChar(100)
  phoneNumber String? @map("phone_number") @db.VarChar(15)
  address     String? @db.Text

  // Status Darurat
  isAnonymous     Boolean @default(false) @map("is_anonymous")
  tempEmergencyId String? @unique @map("temp_emergency_id") @db.VarChar(50)

  medicalRecords MedicalRecord[]

  createdAt DateTime @default(now()) @map("created_at")

  @@index([nik])
  @@index([fullName, dateOfBirth, motherName])
  @@map("patients")
}

// ===========================================
//  MEDICAL RECORDS (SaaS + Future Integration)
// ===========================================
model MedicalRecord {
  id        String @id @default(uuid()) @db.Uuid
  patientId String @map("patient_id") @db.Uuid
  doctorId  Int    @map("doctor_id")

  // Data Medis (Input Manual Dokter)
  diagnosis    String? @db.Text
  treatment    String? @db.Text
  prescription String? @db.Text

  // Keamanan Blockchain 
  localHash String? @map("local_hash") @db.VarChar(255)

  // ============================================================
  // [FUTURE UPDATE] FITUR INTEGRASI RUMAH SAKIT LAIN (OPEN API)
  // Uncomment bagian ini nanti saat sudah kerjasama dengan RS lain
  // ============================================================

  // dataSource    String?   @default("INTERNAL") @map("data_source") @db.VarChar(50) 
  // Penjelasan: Nanti diisi 'INTERNAL' (inputan dokter sendiri) atau 'RS_SILOAM', 'RS_UD_PONTIANAK', dll.

  // externalRefId String?   @map("external_ref_id") @db.VarChar(100) 
  // Penjelasan: ID asli dari database RS pengirim (agar tidak duplikat data kalau dikirim 2x)

  // ============================================================

  visitDate DateTime @default(now()) @map("visit_date")
  createdAt DateTime @default(now()) @map("created_at")

  patient Patient @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  Doctor  @relation(fields: [doctorId], references: [id])

  blockchainLogs BlockchainSyncLog[]

  @@map("medical_records")
}

// ===========================================
// BLOCKCHAIN SYNC LOGS
// ===========================================
model BlockchainSyncLog {
  id              Int    @id @default(autoincrement())
  medicalRecordId String @map("medical_record_id") @db.Uuid

  transactionHash String?    @map("transaction_hash") @db.VarChar(255)
  contractAddress String?    @map("smart_contract_address") @db.VarChar(255)
  status          SyncStatus @default(PENDING)

  verifiedAt DateTime? @map("verified_at")
  createdAt  DateTime  @default(now()) @map("created_at")

  medicalRecord MedicalRecord @relation(fields: [medicalRecordId], references: [id], onDelete: Cascade)

  @@map("blockchain_sync_logs")
}
